## useful aliases

exists()
{
  command -v "$1" >/dev/null 2>&1
}

# set some aliases
alias df='df -h'
alias du='du -h'
alias grep='grep --color'
alias man="man -a"

UNAME=`uname`
if [ "$UNAME" == "Linux" ]; then
   alias ls='ls --color=auto -hF'
fi
if [ "$UNAME" == "Darwin" ]; then
   alias ls='ls -GhF'
fi

# swap less for more
if exists less; then
  alias more='less'
fi

# use mac git instead of macports
if [ -f /usr/bin/git ] ; then
    alias git=/usr/bin/git
fi
