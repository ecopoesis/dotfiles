[user]
	name = Mike Roberts
	email = miker@miker.org
[push]
	default = simple
[core]
	trustctime = false
	autocrlf = input
	editor = vim
	excludesfile = /Users/miker/.gitignore_global
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = diffmerge --merge\n--result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
[color]
    ui = auto
[alias]
    ln = log --pretty=colored
    co = checkout
    cob = !git checkout -b $1 && git commit --allow-empty -m \"[$2]\" && :
    cobf = !git cob feature/$1 $2
    cobb = !git cob bugfix/$1 $2
[pretty]
    colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset
      
